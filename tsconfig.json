{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "types": [
      "classnames",
      "react",
      "react-dom",
      "react-native"
    ]
  },
  "include": [
    "components/**/*"
  ],
}