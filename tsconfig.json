{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "classnames",
      "react",
      "react-dom",
      "react-native",
      "node",
      "jest"
    ]
  },
  "include": [
    "components/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ],
  "compileOnSave": false
}
