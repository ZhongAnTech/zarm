{
  "name": "site-next",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "dumi build",
    "dev": "dumi dev"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "babel-plugin-import": "^1.13.6",
    "classnames": "^2.3.2",
    "dumi": "^2.1.15",
    "dumi-theme-zarm": "workspace:*"
  }
}
