{
  "private": true,
  "scripts": {
    "build": "pnpm --filter @zarm-design/* --filter zarm run build",
    "build:weapp": "pnpm --filter mini-demo build:weapp",
    "clean": "rimraf packages/**/{node_modules,dist,lib,es} website/{node_modules,dist,.dumi/tmp*} node_modules",
    "dep:update": "pnpm up --interactive --latest --recursive",
    "deploy": "pnpm --filter site gh-pages -d assets",
    "deploy:build": "pnpm --filter site build",
    "dev": "pnpm --filter site start",
    "dev:h5": "pnpm --filter mini-demo dev:h5",
    "dev:weapp": "pnpm --filter mini-demo dev:weapp",
    "docs:build": "pnpm --filter site-next build",
    "docs:dev": "pnpm --filter site-next dev",
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm lint:tsc && pnpm lint:script && pnpm lint:style",
    "lint:script": "eslint --ext .ts,.tsx,.js,.jsx packages",
    "lint:style": "stylelint \"packages/**/*.scss\" --syntax scss",
    "lint:tsc": "tsc --noEmit",
    "prepare": "husky install",
    "prepublishOnly": "pnpm lint && pnpm build && pnpm test",
    "prettier": "prettier --write -c '**/*.{js,jsx,ts,tsx,html,md,json,yml}'",
    "release": "pnpm publish",
    "sort": "npx sort-package-json \"package.json\" \"packages/*/package.json\"",
    "start": "pnpm docs:dev",
    "test": "pnpm test"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,html,md,json,yml}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.scss": [
      "stylelint --syntax scss"
    ]
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.3",
    "@babel/eslint-plugin": "^7.14.5",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "browserslist": "^4.16.4",
    "concurrently": "^6.0.2",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-config-za": "^2.4.0-alpha.3",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.1.2",
    "husky": "^8.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^13.1.0",
    "only-allow": "^1.1.1",
    "prettier": "^2.8.0",
    "prettier-plugin-organize-imports": "^3.2.1",
    "prettier-plugin-packagejson": "^2.3.0",
    "rimraf": "^3.0.2",
    "stylelint": "13.8.0",
    "stylelint-config-za": "0.3.0",
    "stylelint-scss": "^3.18.0",
    "typescript": "~4.5.0"
  }
}
